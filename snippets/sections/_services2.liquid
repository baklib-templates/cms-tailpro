{%# 大图标 style 1: https://demo-tailpro.uibak.com/s/snippets/services %}

<!-- start services -->
<div id="service" class="relative py-6 md:py-10 bg-white dark:bg-gray-800">
  <div class="container xl:max-w-6xl mx-auto px-4">
    <!-- section header -->
    <header class="text-center mx-auto mb-12 lg:px-20">
      <h2 class="text-2xl md:text-3xl leading-normal mb-2 font-bold text-gray-800 dark:text-gray-100">{{ page.link_text }}</h2>
      <hr class="block w-12 h-0.5 mx-auto my-5 bg-primary-700 border-primary-700">
      <p class="text-gray-500 leading-relaxed font-light text-xl mx-auto pb-2">
        {{ page.settings.description }} </p>
    </header><!-- end section header -->

    <!-- row -->
    <div class="flex flex-wrap flex-row text-center">
      {% for item in page.children_in_nav_menu %}
        {% assign mod = forloop.index | modulo: 2 %}
        <div class="flex-shrink max-w-full w-full md:w-1/2 lg:w-1/3">
          <!-- service block -->
          <div class="{% if mod > 0 %} bg-white dark:bg-gray-800  {% else %} bg-gray-50 dark:bg-gray-900 dark:bg-opacity-20  {% endif %} p-6 md:p-10">
            <div class="inline-block text-primary-700 mb-2">
              <!-- icon -->
              <img src="{{ item.settings.thumb_image_url |  default: default_icon_url }}" class=""/>
            </div>
            <a href="{{ item.path }}" class="text-lg leading-normal mb-2 font-semibold text-gray-700 hover:text-primary hover:underline">{{ item.link_text }}</a>
            <p class="line-clamp-3">{{ item.settings.description }}</p>
          </div><!-- end service block -->
        </div>
      {% endfor %}
    </div><!-- end row -->
  </div>
</div><!-- End Service -->
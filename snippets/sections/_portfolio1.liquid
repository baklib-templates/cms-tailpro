<div id="portfolio" class="relative py-12 md:py-20 bg-white dark:bg-gray-800">
  <div class="container xl:max-w-6xl mx-auto px-4">
    <!-- section header -->
    <header class="text-center mx-auto mb-12">
      <h2 class="text-2xl md:text-3xl leading-normal mb-2 font-bold text-gray-800 dark:text-gray-100">{{ page.settings.title }}</h2>
      <hr class="block w-12 h-0.5 mx-auto my-5 bg-primary-700 border-primary-700">
      <p class="text-gray-600" data-aos="fade-down" data-aos-delay="200">{{ page.settings.description }}</p>    
    </header><!-- end section header -->

    <!-- Portfolio Content -->
    <div class="flex flex-wrap flex-row -mx-4 lightgallery-thumbnail">
      {% for item in page.children_in_list %}
        <figure data-src="{{ item.settings.thumb_image_url }}" class="flex-shrink max-w-full px-4 w-1/2 md:w-1/3 lg:w-1/5 group" data-sub-html="{{ item.link_text }}">
          <div class="relative text-center items-center overflow-hidden cursor-pointer mb-6">
            <img class="block object-contain h-auto max-h-48 transform duration-500 hover:scale-125" src="{{ item.settings.thumb_image_url }}" alt="{{ item.link_text }}">
            <figcaption class="absolute inset-x-0 bottom-0 h-12 transition-opacity duration-500 ease-in opacity-0 group-hover:opacity-100 overflow-hidden px-4 py-2 text-gray-100 bg-primary-700 text-center">
              <h3 class="text-base leading-normal font-semibold my-1 text-gray-100">{{ item.link_text }}</h3>
            </figcaption>
          </div>
        </figure>
      {% endfor %}
    </div>
  </div>

</div><!-- End portfolio -->
{% assign pages = page.parent.children_in_list %}

{% render 'hero/hero_title', item: page %}

<!--内容版块 -->
<section class="bg-gray-100 py-4 md:py-8">
  <div class="container mx-auto max-w-6xl relative px-4">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div class="md:col-span-1 bg-white p-4 md:sticky md:top-24 md:h-fit rounded-md shadow-sm dark:shadow-gray-700">
              <div class="flex flex-col space-y-">
                  {% for item in pages %}
                      <a class="{% if page.id == item.id  %} bg-primary text-white {% endif %} hover:bg-primary hover:text-white px-4 py-3 my-2 text-lg border-b border-gray-400" href="{{ item.path }}">{{ item.link_text }}</a>
                  {% endfor %}
              </div>
          </div>
          <div class="md:col-span-3 bg-white p-6 ">
            <!-- Article content -->
            <div class="ProseMirror max-w-full overflow-x-auto">
              {{ page.settings.content }}
            </div>
          </div>
      </div>
  </div>
</section>

<!--/ article-->
{% schema %}
  {
    "name": "Page-带侧边栏导航",
    "description": "page.side: 与上一级栏目关联的侧边栏导航页面",
    "thumb_url": "images/theme/channel-side.webp",
    "preview_image_urls": [
      "images/theme/channel-side.webp"
    ],
    "sub_page_templates": [],
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "标题"
      },
      {
        "id": "description",
        "type": "textarea",
        "label": "摘要"
      },
      {
        "id": "content",
        "type": "richtext",
        "label": "内容"
      },
      {
        "id": "thumb_image_url",
        "type": "image_picker",
        "ratio": "3:3",
        "width": 100,
        "label": "ICON图标"
      },
      {
        "id": "tags",
        "type": "tag_picker",
        "multiple": true,
        "label": "t:settings_schema.page.settings.tags.label"
      }
    ]
  }
{% endschema%}

{% comment %} 页面内容部分 {% endcomment %}
{% assign default_hero_bg = 'images/img-min/bg-planet.jpg' | asset_url %}
{% if page.parent.settings.thumb_image_url %}
    {% assign hero_bg = page.parent.settings.thumb_image_url %}
{% elsif page.settings.thumb_image_url %}
    {% assign hero_bg = page.settings.thumb_image_url %}
{% else %}
    {% assign hero_bg = default_hero_bg %}
{% endif %}

<main id="content">
  <!-- =========={ HERO }==========  -->
  <div id="hero" class="relative py-12 jarallax">
    <!-- background parallax -->
    <img class="jarallax-img" src="{{ hero_bg }}" alt="title">
    <!-- background overlay -->
    <div class="absolute top-0 w-full h-full opacity-90 start-0 bg-primary-700" style="z-index:-1;"></div>

    <div class="container px-4 mx-auto xl:max-w-6xl">
      <div class="flex flex-row flex-wrap justify-center items-center -mx-4">
        <!-- content -->
        <div class="px-4 w-full max-w-full lg:w-10/12">
          <div class="py-6 mt-0 text-center">
            <div class="text-center">
              <a href="{{ page.parent.path }}" class="px-3 py-1 text-sm text-gray-700 bg-yellow-300 rounded">{{ page.parent.link_text }}</a>
            </div>
            <div class="pt-8 mt-0 text-center">
              <h1 class="mb-0 text-3xl font-bold leading-normal text-white md:text-4xl">{{ page.settings.title }}</h1>
              <p class="mt-4 text-gray-300">{{ page.settings.description }}</p>
            </div>

          </div>
        </div><!-- end content -->
      </div>
    </div>
  </div><!-- End hero -->


  <!-- =========={ POST }==========  -->
  <div id="post-content" class="relative pb-12 bg-white dark:bg-gray-800">
    <div class="container px-4 mx-auto xl:max-w-6xl">
      <div class="flex flex-row flex-wrap justify-center -mx-4">
        <div class="px-4 w-full max-w-full lg:w-10/12">
          <div class="p-4">
            <!-- author -->
            {% if site.settings.is_show_author %}
              <div class="flex flex-row flex-wrap py-4 -mx-4 space-x-3">
                <div class="">
                  <a href="javascript:void(0);"><img class="w-8 h-8 rounded-full border-2 shadow-xl border-primary/30 md:w-12 md:h-12 dark:border-gray-700" src="{{ page.author.avatar_url | default: site.settings.default_avatar_url }}" alt="author"></a>
                </div>
                <div class="">
                  <!--name-->
                  <p class="mb-2 text-lg font-semibold leading-normal text-gray-800 dark:text-gray-100">
                    <span class="font-semibold">{{ page.author.name }}</span>
                  </p>
                  <!--description-->
                  <p class="text-sm text-gray-500 dark:text-gray-400">
                    <time pubdate datetime="{{ page.published_at }}" title="{{ page.published_at }}">发布于：{{ page.published_at | date: "%Y-%m-%d" }}</time>
                    <br/> 浏览：{{ page.visits_count }}</p>
                </div>
              </div>
            {% endif %}

            <!-- Post content -->
            <article class="pb-4 leading-relaxed">
              <div class="overflow-x-auto max-w-full ProseMirror prose xl:prose-lg">
                {{ page.settings.content }}
              </div>
            </article>

            <!-- Comments -->
            <!-- Feedback -->
            <div class="mx-auto mt-2 max-w-4xl">
              {% for tag in page.settings.tags %}
                {% render 'tag', tag: tag %}
              {% endfor %}
              {% render "feedback_form", page: page %}
              {%# render "feedback_btn", page: page %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div><!-- End Contact Form -->
</main>

<div class="container mx-auto xl:max-w-6xl">
  <div class="px-4 py-4 w-full max-w-full lg:w-10/12">
    {% render 'breadcrumb', breadcrumb: page.breadcrumb  %}
  </div>
</div>

{% schema %}
  {
    "name": "Page",
    "thumb_url": "images/theme/page.webp",
    "preview_image_urls": [
      "images/theme/page.webp"
    ],
    "sub_page_templates": ["page"],
    "settings": [
      {
        "id": "title",
        "type": "text",
        "placeholder": "",
        "label": "t:settings_schema.page.settings.title.label",
        "info": "t:settings_schema.page.settings.title.info"
      },
      {
        "id": "description",
        "type": "textarea",
        "label": "t:settings_schema.page.settings.description.label"
      },
      {
        "id": "thumb_image_url",
        "type": "image_picker",
        "ratio": "4:3",
        "width": 200,
        "label": "t:settings_schema.page.settings.thumb_image_url.label"
      },
      {
        "id": "content",
        "type": "richtext",
        "label": "t:settings_schema.page.settings.content.label"
      },
      {
        "id": "tags",
        "type": "tag_picker",
        "multiple": true,
        "label": "t:settings_schema.page.settings.tags.label"
      }
    ]
  }
{% endschema %}

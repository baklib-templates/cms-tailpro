[
  {
    "name": "theme_info",
    "theme_name": "tailpro",
    "theme_label": "t:theme_label",
    "theme_description": "t:theme_description",
    "theme_version": "1.0.0",
    "theme_scope": "cms",
    "theme_author": "Baklib",
    "theme_documentation_url": "https://help.baklib.cn/themes/tailpro",
    "theme_support_url": "https://help.baklib.cn/themes/tailpro/settings",
    "theme_thumb_url": "images/theme/index.webp",
    "theme_preview_images": [
      "images/theme/index.webp",
      "images/theme/channel-card.webp",
      "images/theme/channel-side.webp",
      "images/theme/project1.jpg",
      "images/theme/project2.jpg",
      "images/theme/project3.jpg"
    ],
    "theme_languages": [
      {
        "name": "中文简体",
        "value": "zh-CN"
      },
      {
        "name": "English",
        "value": "en-US"
      }
    ],
    "recommendations": {
      "color_schemas": {
        "fashion": {
          "name": "时尚",
          "colors": {
            "--theme-color-primary": "#3D50E0",
            "--theme-color-secondary": "#E91E63",
            "--theme-color-accent": "#AAAAAA",
            "--theme-color-info": "#2196F3",
            "--theme-color-success": "#4CAF50",
            "--theme-color-warning": "#FFC107"
          }
        },
        "old_school": {
          "name": "复古",
          "colors": {
            "--theme-color-primary": "#9C27B0",
            "--theme-color-secondary": "#673AB7",
            "--theme-color-accent": "#AAAAAA",
            "--theme-color-info": "#418CC8",
            "--theme-color-success": "#29B52F",
            "--theme-color-warning": "#FFC107"
          }
        }
      },
      "initial_pages": {
        "default": {
          "name": "tailpro Website",
          "default": true,
          "pages": [
            {
              "name": "关于我们",
              "slug": "about",
              "template": "channel"
            },
            {
              "name": "服务项目",
              "slug": "services",
              "template": "channel"
            },
            {
              "name": "作品中心",
              "slug": "portfolio",
              "template": "channel"
            },
            {
              "name": "新闻资讯",
              "slug": "news",
              "template": "channel"
            },
            {
              "name": "视频中心",
              "slug": "videos",
              "template": "channel"
            }
            
          ]
        }
      }
    }
  },
  {
    "name": "t:settings_schema.generic.name",
    "settings": [
      {
        "id": "logo_url",
        "type": "image_picker",
        "ratio": "6:2",
        "width": 150,
        "label": "网站 LOGO",
        "info": "展示在页头导航栏"
      },
      {
        "id": "footer_logo_url",
        "type": "image_picker",
        "ratio": "8:2",
        "width": 150,
        "label": "页脚 LOGO",
        "info": "展示在页脚导航栏"
      },
      {
        "id": "slogan",
        "type": "text",
        "label": "公司一句话口号",
        "default": "我们是一家创意公司，服务于各行各业的本地和国际企业，从小型到大型企业。"
      },
      {
        "id": "request_title",
        "type": "text",
        "label": "导航按钮文字",
        "default": "联系我们"
      },
      {
        "id": "request_url",
        "type": "text",
        "label": "导航按钮链接",
        "default": "https://help.baklib.cn/themes/tailpro",
        "info": "请填写https://开头的 URL 地址；设置以后会在文章页底部显示'Submit a request'链接"
      },
      {
        "id": "is_show_author",
        "type": "checkbox",
        "label": "文章是否显示文章作者信息",
        "info": "包括作者头像、昵称，发布日期，浏览量",
        "default": true
      },
      {
        "id": "default_avatar_url",
        "type": "image_picker",
        "ratio": "1:1",
        "width": 150,
        "label": "默认作者头像",
        "info": "展示在文章作者信息处，建议尺寸150x150px"
      },
      {
        "id": "default_thumb_url",
        "type": "image_picker",
        "ratio": "4:3",
        "width": 250,
        "label": "默认文章方面图",
        "info": "展示在文章列表封面图，建议尺寸400x300px"
      }
    ]
  },
  {
    "name": "定制页面版块设计",
    "settings": [
      {"id": "cta_title","type": "html","label": "首页CTA行动号召（50 字以内）"},
      {
        "id": "brand_logos",
        "type": "textarea",
        "label": "客户案例LOGO墙",
        "rows": 10,
        "info": "客户案例/合作伙伴 LOGO 墙，每行一个 URL 地址，建议添加 5 个以上",
        "default": ""
      },
      {
        "id": "aside_html",
        "type": "html",
        "label": "侧边栏广告代码",
        "info": "显示在文章页和频道页的侧边栏位置，支持 HTML 代码",
        "rows": 10,
        "placeholder": "<div style=\"padding: 10px; border: 1px solid #eee; text-align: center;\">Your Ad Here</div>"
      }
    ]
  },
  {
    "name": "页头页脚设置",
    "settings": [
      {
        "id": "head_html",
        "type": "html",
        "label": "t:settings_schema.nav.settings.head_html.label",
        "info": "t:settings_schema.nav.settings.head_html.info",
        "rows": 10,
        "placeholder": "t:settings_schema.nav.settings.head_html.placeholder"
      },
      {
        "id": "header_menu",
        "type": "textarea",
        "label": "页头导航菜单设置",
        "rows": 10,
        "info": "格式：menu_name[slug{sub_menu[slug|sub_menu[slug，每行一个分栏。",
        "default": "首页[/\n新闻资讯[/news\n服务项目[/services\n产品中心[/products\n视频资源[/videos\n关于我们[/about"
      },
      {
        "id": "footer_menu",
        "type": "textarea",
        "label": "页脚菜单设置",
        "rows": 10,
        "info": "格式：menu_name[slug]{sub_menu[slug|sub_menu[slug，每行一个分栏。",
        "default": "快捷导航[/about{公司介绍[/about|服务项目[/services|网站地图[/s/sitemap\nVideos[/videos{Catalog1[/products/pro1|Catalog2[/products/pro2\nNews[/news{Catalog1[/products/pro1|Catalog2[/products/pro2"
      },
      {
        "id": "company_info",
        "type": "html",
        "label": "页脚公司信息",
        "default": "Tailwind template designer, we build web templates, themes and other goodies, putting a lot of love in every pixel and design."
      },
      {
        "id": "copyright_info",
        "type": "html",
        "label": "页脚版权信息",
        "default": "Copyright © Baklib Inc. | All rights reserved."
      }
    ]
  }
]

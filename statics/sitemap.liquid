{% assign pages = site.pages_in_list | order_by: '-created_at' %}

{% set_meta_title 'Sitemap' %}
{% set_meta_description 'Sitemap' %}
{% set_meta_keywords 'Sitemap' %}

<!-- Page wrapper -->
<div class="flex flex-col min-h-screen overflow-hidden">
    <!-- Page content -->
    <main class="grow">
        <!-- Page illustration -->
        <div class="relative max-w-6xl mx-auto h-0 pointer-events-none -z-1" aria-hidden="true">
            <svg class="absolute top-0 right-0 transform translate-x-1/2 -mr-16 dark:opacity-40" width="1200" height="800" xmlns="http://www.w3.org/2000/svg"><defs><filter x="-37.5%" y="-37.5%" width="175%" height="175%" filterUnits="objectBoundingBox" id="b"><feGaussianBlur stdDeviation="50" in="SourceGraphic" /></filter><filter x="-37.5%" y="-37.5%" width="175%" height="175%" filterUnits="objectBoundingBox" id="c"><feGaussianBlur stdDeviation="50" in="SourceGraphic" /></filter><linearGradient x1="50%" y1="0%" x2="50%" y2="100%" id="a"><stop stop-color="#C51015" stop-opacity="0" offset="0%" /><stop stop-color="#F656AA" offset="100%" /></linearGradient></defs><g fill="none" fill-rule="evenodd"><circle fill-opacity="1" fill="url(#a)" filter="url(#b)" cx="314" cy="278" r="200" /><circle fill-opacity=".2" fill="#C51015" filter="url(#c)" cx="518" cy="345" r="200" /></g></svg>
        </div>

        <!-- Hero -->
        <section class="relative">
            <!-- Background gradient (light version only) -->
            <div class="absolute inset-0 bg-gradient-to-t from-slate-100 to-white opacity-50 pointer-events-none dark:hidden" aria-hidden="true"></div>
            <!-- End background gradient (light version only) -->
            <div class="relative max-w-6xl mx-auto px-4 sm:px-6">
                <div class="pt-4 pb-4 md:pt-8 md:pb-8">
                    <div class="max-w-3xl mx-auto text-center">
                        <h1 class="text-2xl lg:text-3xl font-primary-hat-display mb-4" data-aos="fade-down">
                            网站地图
                        </h1>

                        <div class="max-w-2xl mx-auto md:px-4">
                            {% form_tag 'search', class: 'relative flex items-center mt-8', 'data-aso': 'fade-down', 'data-aso-delay': '300' %}
                                <input type="search" name="{{form.keywords_field_name}}" value="{{ search.keywords | escape }}" placeholder="searching..."  class="bg-white border border-slate-300 focus:border-slate-400 rounded leading-snug py-3 px-4 placeholder-slate-500 dark:placeholder-slate-400 dark:bg-slate-800 dark:border dark:border-slate-600 dark:focus:border-slate-500  w-full pl-12" aria-label="Search" />
                                <button type="submit" class="absolute inset-0 right-auto" aria-label="Search">
                                    <svg class="w-4 h-4 shrink-0 ml-4 mr-3" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
                                        <path class="fill-current text-slate-400" d="M7 14c-3.86 0-7-3.14-7-7s3.14-7 7-7 7 3.14 7 7-3.14 7-7 7zM7 2C4.243 2 2 4.243 2 7s2.243 5 5 5 5-2.243 5-5-2.243-5-5-5zm8.707 12.293a.999.999 0 11-1.414 1.414L11.9 13.314a8.019 8.019 0 001.414-1.414l2.393 2.393z" />
                                    </svg>
                                </button>
                            {% endform_tag %}
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- List -->
        <section class="relative border-t border-transparent dark:border-slate-800">
            <!-- Background gradient (dark version only) -->
            <div class="absolute inset-0 opacity-25 bg-gradient-to-b from-slate-800 to-slate-900 pointer-events-none hidden dark:block" aria-hidden="true"></div>
            <!-- End background gradient (dark version only) -->
            <div class="relative max-w-6xl mx-auto px-4 sm:px-6">
                <div class="py-8 md:py-12">

                    <div x-data="{ category: '' }" data-aos="fade-up" data-aos-delay="450">

                        <!-- Articles -->
                        <div class="-mb-2">
                        {% paginate_tag pages, per: 15 %}
                            {% for page in pages %}
                                <!-- 1st Article -->
                                <article class="mb-2" x-show="['', '1'].includes(category)">
                                    <div class="flex pr-6 py-5 bg-white dark:bg-slate-800 divide-x divide-slate-200 dark:divide-slate-700 shadow-2xl">
                                        <!-- Category icon -->
                                        <div class="flex items-center px-4 sm:px-8">
                                            <svg class="w-8 h-8 shrink-0" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
                                            <circle class="fill-current text-primary-100 dark:hidden" cx="16" cy="16" r="16" />
                                            <path class="fill-current" :class="category === '3' ? 'text-primary-200 dark:text-primary-400' : 'text-primary-500'" d="M1 0h8a1 1 0 011 1v10a1 1 0 01-1 1H1a1 1 0 01-1-1V1a1 1 0 011-1zm14.124 4.085v-.001a1 1 0 01.868 1.116l-1.243 9.932a1 1 0 01-1.117.868l-7.938-1 .248-1.988 6.946.871.995-7.938-2.007-.251.248-1.984 3 .375z" />
                                            </svg>
                                        </div>
                                        <!-- Content -->
                                        <div class="pl-6">
                                            <header>
                                                <h3 class="font-primary-hat-display text-xl tracking-tighter mb-1 search-highlight-block">
                                                    <a href="{{ page.url }}">{{ page.link_text }}</a>
                                                </h3>
                                            </header>
                                            <a class="inline-flex items-center font-medium text-primary-500 hover:underline mt-2" href="{{ page.url }}">
                                                <span>Read more</span>
                                                <svg class="w-3 h-3 shrink-0 mt-px ml-2" viewBox="0 0 12 12" xmlns="http://www.w3.org/2000/svg">
                                                    <path class="fill-current" d="M6.602 11l-.875-.864L9.33 6.534H0v-1.25h9.33L5.727 1.693l.875-.875 5.091 5.091z" />
                                                </svg>
                                            </a>
                                        </div>
                                    </div>
                                </article>
                            {% else %}
                                <div class="w-full mx-auto my-8">Empty!</div>
                            {% endfor %}
                            <!-- Pagination -->
                            <nav class="flex justify-center sm:justify-between mt-12">
                                {% render 'paginate', paginate: paginate %}
                            </nav>
                        {% endpaginate_tag %}
                        </div>

                    </div>

                </div>
            </div>
        </section>

        <!-- Related links -->

    </main>
</div>
